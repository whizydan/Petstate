    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/ic_picture"
        app:layout_constraintBottom_toTopOf="@+id/edClientName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edClientName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/client_s_name"
        android:inputType="textPersonName"
        android:textColorHint="@color/contentTextColor"
        app:layout_constraintBottom_toTopOf="@+id/edPhoneNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilePic" />

    <EditText
        android:id="@+id/edClientsEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="Enter Client's Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/contentTextColor"
        app:layout_constraintBottom_toTopOf="@+id/edClientPostalAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPhoneNo" />

    <EditText
        android:id="@+id/edClientPostalAddress"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/postal_address"
        android:inputType="textPostalAddress"
        android:textColorHint="@color/contentTextColor"
        app:layout_constraintBottom_toTopOf="@+id/btSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edClientsEmail" />

    <EditText
        android:id="@+id/edPhoneNo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/phone_number"
        android:importantForAutofill="no"
        android:inputType="date"
        android:textColorHint="@color/contentTextColor"
        app:layout_constraintBottom_toTopOf="@+id/edClientsEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edClientName" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="145dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/buttonnext"
        android:backgroundTint="@color/colorPrimary"
        android:text="save"
        android:textColor="@color/white"
        app:backgroundTint="@color/button"

        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edClientPostalAddress"
        app:rippleColor="@color/colorPrimary" />

