<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.owner_vs_vet">

    <Button
        android:id="@+id/btVet"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="238dp"
        android:text="Vet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btOwner" />

    <Button
        android:id="@+id/btOwner"
        android:layout_width="266dp"
        android:layout_height="73dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="47dp"
        android:text="Pet Owner"
        app:layout_constraintBottom_toTopOf="@+id/btVet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="261dp"
        android:layout_height="61dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="119dp"
        android:text="Which are you?"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btOwner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>