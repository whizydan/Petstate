<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/background"
    tools:context=".Add_Pet">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alvan_nee_t_0ew_sebse_unsplash"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/ed_pet_dob"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/button"
        android:hint="enter pet age in weeks"
        android:importantForAutofill="no"
        android:inputType="date"
        android:letterSpacing="0.0325"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18.3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_pet_name" />

    <EditText
        android:id="@+id/ed_pet_name"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/button"
        android:hint="enter pet name"
        android:letterSpacing="0.0325"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btSaveNewPet"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="175dp"
        android:backgroundTint="@color/button"
        android:text="SAVE"
        android:textColor="@color/white"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPetColour"
        app:rippleColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/edPetBreed"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="enter pet's breed"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPetType" />

    <EditText
        android:id="@+id/edPetColour"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="enter pet colour"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPetBreed" />

    <EditText
        android:id="@+id/edPetType"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="enter pet type e.g cat or dog"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_pet_dob" />

